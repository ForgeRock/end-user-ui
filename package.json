{
    "name": "idm-ui",
    "version": "2.0.0",
    "private": true,
    "description": "IDM End User UI Nulli Theme",
    "author": "jason.browne <jason.browne@forgerock.com>",
    "scripts": {
        "build": "vue-cli-service build --skip-plugins @vue/cli-plugin-eslint",
        "dev": "vue-cli-service serve",
        "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
        "lint": "vue-cli-service lint --no-fix --format stylish",
        "test:unit": "vue-cli-service test:unit",
        "test:coverage": "NODE_ENV=test nyc npm run test"
    },
    "babel": {
        "env": {
            "test": {
                "plugins": ["istanbul"]
            }
        },
        "plugins": [
            "@babel/plugin-proposal-async-generator-functions",
            "@babel/plugin-transform-runtime"
        ],
        "presets": [
            "@babel/env",
            ["@vue/app",
                {
                    "useBuiltIns": "entry"
                }
            ]
        ],
        "retainLines": true,
        "sourceMaps": true
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 11",
        "not dead",
        "not op_mini all",
        "not OperaMobile >1",
        "not IE_Mob>1",
        "not baidu>1",
        "not android>1",
        "maintained node versions"
    ],
    "dependencies": {
        "appauthhelper": "^0.3.3",
        "axios": "^0.19.2",
        "bootstrap": "^4.5.0",
        "bootstrap-vue": "^2.14.0",
        "core-js": "^3.6.5",
        "es6-promise": "^4.2.8",
        "jquery": "^3.5.1",
        "lodash": "^4.17.15",
        "moment": "^2.25.3",
        "oidcsessioncheck": "0.0.4",
        "pluralize": "^8.0.0",
        "vee-validate": "2.2.15",
        "vue": "^2.6.11",
        "vue-i18n": "^8.17.7",
        "vue-js-toggle-button": "^1.3.3",
        "vue-multiselect": "^2.1.6",
        "vue-notification": "^1.3.20",
        "vue-router": "^3.2.0",
        "vue-spinner": "^1.0.3"
    },
    "devDependencies": {
        "@babel/polyfill": "^7.8.7",
        "@babel/preset-env": "^7.9.6",
        "@babel/register": "^7.9.0",
        "@fortawesome/fontawesome-free": "^5.13.0",
        "@istanbuljs/nyc-config-babel": "^3.0.0",
        "@vue/cli-plugin-babel": "^4.3.1",
        "@vue/cli-plugin-eslint": "^4.3.1",
        "@vue/cli-plugin-unit-mocha": "^4.3.1",
        "@vue/cli-service": "^4.3.1",
        "@vue/eslint-config-standard": "^5.1.2",
        "@vue/test-utils": "^1.0.3",
        "babel-eslint": "^10.1.0",
        "babel-plugin-istanbul": "^6.0.0",
        "chai": "^4.2.0",
        "cross-env": "^7.0.2",
        "eslint": "7.0.0",
        "eslint-import-resolver-webpack": "^0.12.1",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-chai-expect": "^2.1.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-mocha": "^7.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "eslint-plugin-unicorn": "^20.0.0",
        "eslint-plugin-vue": "^6.2.2",
        "moxios": "^0.4.0",
        "mutationobserver-shim": "^0.3.5",
        "node-sass": "^4.14.1",
        "nyc": "^15.0.1",
        "popper.js": "^1.16.1",
        "portal-vue": "^2.1.7",
        "sass-loader": "^8.0.2",
        "sinon": "^9.0.2",
        "style-resources-loader": "^1.3.3",
        "vue-cli-plugin-i18n": "^1.0.1",
        "vue-template-compiler": "^2.6.11"
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": ["tests/**/*.js"],
        "env": {
            "browser": true,
            "es6": true,
            "node": true
        },
        "extends": [
            "eslint:all",
            "plugin:import/errors",
            "plugin:import/recommended",
            "plugin:import/warnings",
            "plugin:mocha/recommended",
            "plugin:unicorn/recommended",
            "plugin:vue/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2020,
            "parser": "babel-eslint",
            "sourceType": "module"
        },
        "plugins": [
            "babel",
            "chai-expect",
            "mocha",
            "unicorn",
            "vue"
        ],
        "rules": {
            "array-element-newline": ["error", "consistent"],
            "array-bracket-newline": ["error", "consistent"],
            "eol-last": 2,
            "func-names": ["error", "as-needed"],
            "function-call-argument-newline": ["error", "consistent"],
            "import/extensions": ["error", "always", {
                "js": "never",
                "vue": "never"
            }],
            "indent": ["error", 4],
            "max-len": [2, { "code": 300, "tabWidth": 4, "ignoreUrls": true }],
            "max-lines": ["error", { "max": 460, "skipBlankLines": true, "skipComments": true }],
            "max-lines-per-function": ["error", { "skipBlankLines": true, "skipComments": true }],
            "max-params": ["error", 4],
            "max-statements": ["error", 10, { "ignoreTopLevelFunctions": true }],
            "multiline-ternary": "off",
            "no-magic-numbers": "off",
            "no-ternary": "off",
            "no-unused-vars": ["error", { "args": "none" }],
            "object-curly-spacing": ["error", "always"],
            "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": true }],
            "quotes": ["error", "double"],
            "quote-props": ["error", "always"],
            "padded-blocks": ["error", { "blocks": "never", "classes": "always" }],
            "sort-imports": "off",
            "mocha/no-mocha-arrows": "off",
            "unicorn/filename-case": ["error", {
                "cases": {
                    "camelCase": true,
                    "pascalCase": true
                },
                "ignore": [
                    "^EditKBA\\.vue$",
                    "^KBADefinitionFormGroup\\.vue$",
                    "^KBASecurityAnswerDefinitionStage\\.vue$",
                    "^KBAUpdate\\.vue$",
                    "^SelfserviceAPIMixin\\.vue$"
                ]
            }],
            "unicorn/no-null": "off",
            "unicorn/no-reduce": "off",
            "unicorn/prevent-abbreviations": ["error", {
                "whitelist": {
                    "env": true,
                    "prop": true
                }
            }],
            "vue/html-indent": ["error", 4],
            "vue/max-attributes-per-line": ["error", {
                "singleline": 6,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": false
                }
            }],
            "vue/singleline-html-element-content-newline": "off"
        },
        "settings": {
            "import/resolver": {
                "node": {
                    "extensions": [".js", ".vue"]
                }
            }
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "nyc": {
        "all": true,
        "extends": "@istanbuljs/nyc-config-babel",
        "include": ["src/"],
        "instrument": false,
        "sourceMap": false,
        "reporter": [
            "html",
            "text"
        ]
    }
}
